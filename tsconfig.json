{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ES2018",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
